<UserControl x:Class="GameWeb.Templates.CurrentGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameWeb.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="714" d:DesignWidth="1592" Background="Black">
    <Grid>
        <Image Opacity="0.8" x:Name="FullGameImage" HorizontalAlignment="Left" Height="714" Margin="10,0,0,0" VerticalAlignment="Top" Stretch="Fill" Width="1572"/>
        <Button x:Name="DelGame" Content="Удалить игру с аккаунта" HorizontalAlignment="Left" Margin="44,630,0,0" VerticalAlignment="Top" Width="467" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="36" Foreground="Red" FontFamily="Segoe UI Black" Click="DelGame_Click"/>
        <Button x:Name="PlayBtn" Visibility="Hidden" Content="Играть" HorizontalAlignment="Left" Margin="1198,582,0,0" VerticalAlignment="Top" Width="323" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="72" FontFamily="Segoe UI Black" Click="PlayBtn_Click"/>

    </Grid>
</UserControl>
