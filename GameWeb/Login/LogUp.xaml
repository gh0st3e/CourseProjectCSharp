<UserControl x:Class="GameWeb.Login.LogUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameWeb.Login"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="470">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="52,23,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" FontFamily="Segoe UI Black" FontSize="20"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="23" Margin="128,27,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="312"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,70,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" FontFamily="Segoe UI Black" FontSize="20"/>
        
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="22" Margin="144,74,0,0" VerticalAlignment="Top" Width="296"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,116,0,0" TextWrapping="Wrap" Text="Имя аккаунта" VerticalAlignment="Top" FontFamily="Segoe UI Black" FontSize="20"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="23" Margin="204,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="236"/>

    </Grid>
</UserControl>
